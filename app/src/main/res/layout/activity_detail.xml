<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tv_detail_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:text="Bill Details for Month" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Units Used (kWh)"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_detail_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rebate Percentage (%)"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_detail_rebate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_detail_charges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/pink_dark"
        android:layout_marginTop="16dp"
        android:text="Total Charges: RM 0.00" />

    <TextView
        android:id="@+id/tv_detail_final_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:text="Final Cost: RM 0.00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_detail_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btn_detail_delete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_red"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:contentDescription="Delete" />

    </LinearLayout>

</LinearLayout>